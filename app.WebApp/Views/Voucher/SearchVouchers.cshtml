@{
    ViewData["Title"] = "Search Vouchers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    // int SN = 1;
}

<div class="content-header">
    <div class="container-fluid ">
        <div class="breadcrumb d-flex justify-content-between align-items-center  pl-3 pr-3">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="/Admin/Index">Home</a></li>
                <li class="breadcrumb-item active"> Search Vouchers</li>
            </ol>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title text-info">
                    <i class="fas fa-search"></i>
                    Search Voucher
                </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="SearchVoucher" method="post" class="row">
                            <div class="form-group col">
                                <label class="control-label">Voucher No</label>
                                <input class="form-control" />
                            </div>
                            <div class="form-group col">
                                <label class="control-label">Voucher Type</label>
                                <select id="voucherType" class="form-control">
                                    <option selected>--Select Here--</option>
                                    <option>Payment Voucher</option>
                                    <option>Receipt Voucher</option>
                                    <option>Journal Voucher</option>
                                </select>
                            </div>
                            <div class="form-group col">
                                <label class="control-label">From Date</label>
                                <input type="date" class="form-control" />
                            </div>
                            <div class="form-group col">
                                <label class="control-label">To Date</label>
                                <input type="date"  class="form-control" />
                            </div>
                            <div class="form-group col mt-2" style="margin-top: 4px">
                                <label class="control-label"></label>
                                <input type="submit" value="Search Voucher" class="btn btn-outline-primary w-100" />
                            </div>
                        </form>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-sm table-bordered">
                        <thead>
                            <tr class="bg-gradient-gray">
                                <th class="text-center">#</th>
                                <th class="text-center">Vouche No</th>
                                <th class="text-center">Vouche Type</th>
                                <th class="text-center">Voucher Date</th>
                                <th class="text-center">Cost Center Name</th>
                                <th class="text-center">Amount</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>PV01161124001</td>
                                <td>[PV]-Payment Voucher</td>
                                <td>16 November, 2024</td>
                                <td>Test Cost Center Name</td>
                                <td>125000</td>
                                <td class="text-center">
                                    @Html.ActionLink("", "ApprovalVoucherDetail", new { id = 1 }, new { @class = "text-info fas fa-eye", onclick = "return confirm('Are you sure you want to edit this?')" })
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#Voucher').addClass('menu-open');
            $('#VoucherSearchVouchers').addClass('active');
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}