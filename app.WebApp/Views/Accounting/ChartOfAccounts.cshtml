@{
    ViewData["Title"] = "Chart of Account";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    // int SN = 1;
}

<div class="content-header">
    <div class="container-fluid ">
        <div class="breadcrumb d-flex justify-content-between align-items-center  pl-3 pr-3">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="/Admin/Index">Home</a></li>
                <li class="breadcrumb-item active"> Chart of Account</li>
            </ol>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title text-info">
                    <i class="fa fa-sitemap" aria-hidden="true"></i>
                    Chart of Account
                </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <input type="text" class="form-control" placeholder="Search Here" />
                        <div id="treeCOA" class="demo">
                            <ul>
                                <li data-jstree='{ "opened" : true }'>
                                    Chart of Account
                                    <ul>
                                        <li>
                                            Assets [1000]
                                            <ul>
                                                <li>
                                                    Cash [1000001]
                                                    <ul>
                                                        <li>Balance Sheet [1000001001]</li>
                                                    </ul>
                                                </li>
                                                <li>Accounts Receiveable [1000001]</li>
                                            </ul>
                                        </li>
                                        <li>Liabilities [2000]</li>
                                        <li>Equity [3000]</li>
                                        <li>Revenue [4000]</li>
                                        <li>Expenses [5000]</li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#Accounting').addClass('menu-open');
            $('#AccountingChartOfAccounts').addClass('active');

            $('#treeCOA').jstree();
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}