                            <table class="table table-sm ">
                                ${tableFooter ? `<tfoot>${tableFooter}</tfoot>` : ''}
                            </table>
                        </div>
                    </div>
                `;

                var originalContent = $('body').html();

                $('body').html(generateView);
                window.print();
                $('body').html(originalContent);
            });
        });
    </script>
