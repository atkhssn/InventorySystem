@{
    ViewData["Title"] = "Cash Book Report";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid ">
        <div class="breadcrumb d-flex justify-content-between align-items-center  pl-3 pr-3">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="/Admin/Index">Home</a></li>
                <li class="breadcrumb-item active"> Cash Book Report</li>
            </ol>
            <div>
                <a class="btn btn-outline-primary" id="printTrailBalance"><i class="fa fa-print"></i> Print Here</a>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title text-info">
                    <i class="fa fa-info-circle"></i>
                    Account Cash Book Report
                </h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <div class="text-danger text-center my-5">
                        Under Build...
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#Accounting-Report').addClass('menu-open');
            $('#AccountingReportCashBookReport').addClass('active');

            setTimeout(function() {
                $('#response').hide();
            }, 5000);

            $('#printTrailBalance').on('click', function () {
                var tableData = $('tbody').html();
                var tableFooter = $('tfoot').html();

                const generateView = `
                    <div class="card-body">
                        <div class="table-responsive">
                            <h4 class="text-danger text-center my-5">Under Build...</h1>
                        </div>
                    </div>
                `;

                var originalContent = $('body').html();

                $('body').html(generateView);
                window.print();
                $('body').html(originalContent);
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}